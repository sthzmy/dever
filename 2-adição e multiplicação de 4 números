import  java.util.Scanner;

public class media {

    public static void main(String[] args) {

        Scanner entrada = new Scanner(System.in);

        System.out.println("digite o primeiro número");
        double numero1 = entrada.nextDouble();
        System.out.println("digite o segundo número");
        double numero2 = entrada.nextDouble();
        System.out.println("digite o terceiro número");
        double numero3 = entrada.nextDouble();
        System.out.println("digite o quarto número");
        double numero4 = entrada.nextDouble();
        double numero5 = numero1+numero2+numero3+numero4;
        double numero6 = numero1*numero2*numero3*numero4;

        System.out.println("Resultado adição:" +numero5);
        System.out.println("Resultado multiplicação:"+numero6);



    }
}


    
